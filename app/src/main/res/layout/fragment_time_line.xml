<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    tools:context=".Fragment.TimeLineFragment"
    >
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:id="@+id/topLevel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/TitleText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="30sp"
                android:fontFamily="@font/jalnan"
                android:text="@string/TimeLineTitle"
                android:textColor="@color/mainColor"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_alignParentTop="true"
                android:layout_marginTop="50dp"
                android:layout_marginHorizontal="20dp" />
            <ImageView
                android:id="@+id/map_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_below="@id/TitleText"
                android:src="@drawable/map_icon"
                android:layout_marginRight="23dp"/>
            <TextView
                android:id="@+id/tagList"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/TitleText"
                android:layout_toLeftOf="@id/map_icon"
                android:layout_alignLeft="@id/TitleText"
                android:layout_alignBottom="@id/map_icon"
                android:layout_marginRight="23dp"
                android:layout_marginLeft="5dp"
                android:textColor="@color/default_font_color"
                android:textSize="13sp"
                android:text="#경기도 고양시"
                android:fontFamily="@font/jalnan"
                android:gravity="bottom"/>
            <TextView
                android:id="@+id/more_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignRight="@id/tagList"
                android:layout_below="@id/tagList"
                android:layout_marginRight="24dp"
                android:layout_marginTop="10dp"
                android:text="@string/more"
                android:textSize="13sp"
                android:textColor="#A6A6A6"
                android:fontFamily="@font/jalnan"/>
            <View
                android:id="@+id/guideline"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/black"
                android:layout_below="@id/more_text"
                android:layout_marginTop="20dp"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/TimeLinePostRecycler"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@id/guideline"
                android:layout_alignParentBottom="true"/>

        </RelativeLayout>
    </ScrollView>
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/addPostBtn"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:backgroundTint="@color/mainColor"
        android:src="@drawable/plus_white"
        android:adjustViewBounds="true"
        android:layout_marginRight="19dp"
        android:layout_marginBottom="19dp"/>


</RelativeLayout>