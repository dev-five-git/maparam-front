<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    tools:context=".Fragment.HomeFragment"
    >
    <RelativeLayout
        android:id="@+id/topLevel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/keyword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="30sp"
            android:fontFamily="@font/jalnan"
            android:text="오늘의 키워드"
            android:textColor="@color/mainColor"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_alignParentTop="true"
            android:layout_marginTop="50dp"
            android:layout_marginHorizontal="20dp" />
        <RelativeLayout
            android:id="@+id/keywordLayout"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/keyword"
            android:layout_marginTop="23dp"
            android:layout_marginLeft="71dp"
            android:layout_marginRight="47dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@id/keyword">
            <Button

                android:id="@+id/todayKeyword"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:background="@drawable/background_white_rnd_10_shadow"
                android:elevation="15dp"
                android:drawableRight="@drawable/arrow_down"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="7dp"
                android:text=" 봄 "
                android:textSize="25sp"
                android:textColor="@color/default_font_color"
                android:fontFamily="@font/jalnan"/>

        </RelativeLayout>
        <Button
            android:onClick="pressBack"
            android:id="@+id/backBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/keywordLayout"
            android:layout_alignLeft="@id/keyword"
            android:textColor="@color/white"
            android:background="@drawable/background_blue_rnd_10"
            android:text="@string/goBack"
            android:fontFamily="@font/jalnan"
            android:textSize="15sp"
            android:layout_marginTop="15dp"/>
        <RelativeLayout
            android:id="@+id/origin_post_shell"
            android:layout_below="@id/backBtn"
            android:layout_marginTop="12dp"
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="13.5dp">
            <LinearLayout
                android:id="@+id/menu_shell"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="20dp"
                android:layout_marginTop="22.5dp"
                android:layout_marginRight="16dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true">
                <ImageButton
                    android:id="@+id/menu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/keyword_post_menu"
                    />
            </LinearLayout>
            <View
                android:layout_marginBottom="11dp"
                android:layout_alignParentTop="true"
                android:id="@+id/guideline"
                android:layout_width="match_parent"
                android:background="@color/black"
                android:layout_height="1dp"></View>
            <ImageView
                android:id="@+id/profile"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginTop="21dp"
                android:layout_marginLeft="16dp"
                android:layout_below="@id/guideline"
                android:layout_alignParentLeft="true"
                android:src="@drawable/default_profile"
                />
            <TextView
                android:id="@+id/user_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@id/profile"
                android:layout_marginTop="6dp"
                android:layout_marginLeft="13dp"
                android:layout_toRightOf="@id/profile"
                android:text="강형민"
                android:textSize="20sp"
                android:fontFamily="@font/bm_jua"
                android:textColor="@color/default_font_color"/>
            <TextView
                android:id="@+id/age"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:layout_marginLeft="13dp"
                android:layout_below="@id/user_name"
                android:layout_toRightOf="@id/profile"
                android:text="20대"
                android:textSize="15sp"
                android:fontFamily="@font/bm_jua"
                android:textColor="@color/gray"/>
            <TextView
                android:id="@+id/date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/gray"
                android:text="2020.12.31"
                android:layout_alignEnd="@id/menu_shell"
                android:layout_alignTop="@id/age"
                android:textSize="12sp"/>
            <ImageView
                android:id="@+id/image"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_below="@id/profile"
                android:layout_marginTop="25dp"
                android:layout_alignLeft="@id/profile"
                android:layout_alignRight="@id/menu_shell"
                android:layout_marginHorizontal="25dp"
                android:adjustViewBounds="true"
                android:scaleType="fitXY"
                />
            <LinearLayout
                android:id="@+id/text_shell"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/image"
                android:layout_marginTop="25dp"
                android:layout_alignLeft="@id/profile"
                android:layout_alignRight="@id/menu_shell"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/post_text"
                    android:visibility="visible"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/image"
                    android:layout_alignLeft="@id/profile"
                    android:layout_alignRight="@id/menu"
                    android:textColor="@color/default_font_color"
                    android:textSize="17sp"
                    android:fontFamily="@font/bm_jua"
                    android:padding="5dp"
                    android:text="봄봄~"
                    android:minHeight="50dp"/>
                <EditText
                    android:id="@+id/post_edit"
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/image"
                    android:layout_alignLeft="@id/profile"
                    android:layout_alignRight="@id/menu"
                    android:textColor="@color/gray"
                    android:textSize="17sp"
                    android:fontFamily="@font/bm_jua"
                    android:padding="5dp"
                    android:text="봄봄~"
                    android:background="@drawable/memo_border"
                    android:minHeight="50dp"/>
            </LinearLayout>


            <LinearLayout
                android:id="@+id/interaction_bar"
                android:orientation="horizontal"
                android:layout_below="@id/text_shell"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="6dp"
                android:paddingBottom="12dp"
                android:layout_marginTop="25dp">
                <LinearLayout
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_gravity="center_vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:src="@drawable/comment_icon"
                        android:padding="10dp"
                        android:layout_marginLeft="16dp"/>

                    <TextView
                        android:id="@+id/comment_count"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="11dp"
                        android:fontFamily="@font/bm_jua"
                        android:text="10"
                        android:paddingVertical="10dp"
                        android:textColor="@color/gray" />

                </LinearLayout>
                <LinearLayout
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/like_icon"
                        android:padding="10dp"
                        android:layout_marginLeft="5dp"/>
                    <TextView
                        android:id="@+id/like_count"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="5"
                        android:paddingVertical="10dp"
                        android:textColor="@color/gray"
                        android:fontFamily="@font/bm_jua"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="11dp"/>
                </LinearLayout>
            </LinearLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="15dp"
                android:orientation="horizontal"

                android:layout_below="@id/interaction_bar">
                <EditText
                    android:layout_centerVertical="true"
                    android:visibility="visible"
                    android:id="@+id/comment"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:fontFamily="@font/bm_jua"
                    android:textSize="15sp"
                    android:layout_toLeftOf="@id/comment_upload"
                    android:paddingHorizontal="10dp"
                    android:paddingVertical="10dp"
                    android:hint="@string/please_enter_content"
                    android:textColor="@color/default_font_color"
                    android:textColorHint="@color/default_font_color"
                    android:background="@drawable/memo_border_blank"/>
                <ImageButton
                    android:layout_marginLeft="10dp"
                    android:layout_centerVertical="true"
                    android:id="@+id/comment_upload"
                    android:layout_alignParentRight="true"
                    android:src="@drawable/arrow_up_white"
                    android:backgroundTint="@color/mainColor"
                    android:layout_width="50dp"
                    android:layout_height="50dp"/>

            </RelativeLayout>
        </RelativeLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/keywordPostCommentRecycler"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintTop_toBottomOf="@id/keywordLayout"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_below="@id/origin_post_shell"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="12dp"
            android:paddingHorizontal="22dp"/>
    </RelativeLayout>

</ScrollView>