<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/shell"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/background_blue_rnd_10"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:orientation="horizontal">
        <ImageView
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:id="@+id/profile"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/default_profile"/>
        <TextView
            android:layout_centerVertical="true"
            android:id="@+id/nick"
            android:textSize="20sp"
            android:text="닉네임"
            android:layout_toRightOf="@id/profile"
            android:fontFamily="@font/bm_jua"
            android:textColor="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="23dp"
            android:layout_marginRight="5dp"/>
        <TextView
            android:layout_centerVertical="true"
            android:id="@+id/before_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="몇분전"
            android:textColor="@color/white"
            android:textSize="13sp"
            android:fontFamily="@font/bm_jua"
            android:layout_alignParentRight="true"
            android:layout_toRightOf="@id/nick"/>
    </RelativeLayout>
    <TextView
        android:id="@+id/content"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginHorizontal="50dp"
        android:textSize="15sp"
        android:textColor="@color/white"
        android:textAlignment="textStart"
        android:text="내용"
        android:fontFamily="@font/bm_jua"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="35dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="20dp">
       <LinearLayout
           android:layout_weight="1"
           android:layout_width="0dp"
           android:layout_height="wrap_content"
           android:gravity="center">
           <ImageView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:src="@drawable/comment_icon_white"
               android:layout_marginRight="10dp"/>
           <TextView
               android:id="@+id/comment_count"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="10"
               android:textColor="@color/white"
               android:textSize="15sp"
               android:fontFamily="@font/bm_jua"/>
       </LinearLayout>
        <LinearLayout
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/like_icon_white"
                android:layout_marginRight="10dp"/>
            <TextView
                android:id="@+id/like_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="10"
                android:textColor="@color/white"
                android:textSize="15sp"
                android:fontFamily="@font/bm_jua"/>
        </LinearLayout>
    </LinearLayout>


</LinearLayout>